<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:padding="10dp">

        <TextView
            android:id="@+id/avarage_marks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView10"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="-10dp"
            android:layout_toStartOf="@+id/imageView10"
            android:layout_toEndOf="@+id/imageView11"
            android:text="TextView"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/quiz_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView10"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-10dp"
            android:layout_marginEnd="100dp"
            android:layout_toStartOf="@+id/imageView10"
            android:layout_toEndOf="@+id/imageView11"
            android:text="TextView"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="10dp"
            android:layout_marginEnd="20dp"
            app:srcCompat="@drawable/delete_icon" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/quiz" />

        <ImageView
            android:id="@+id/grades"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginVertical="10dp"
            android:layout_toStartOf="@+id/imageView10"
            app:srcCompat="@drawable/grades" />


    </RelativeLayout>

</LinearLayout>